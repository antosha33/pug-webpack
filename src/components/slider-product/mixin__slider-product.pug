			h2.slider-product__title=args.title
			if args.tab
				+tab-list
					block
			+swiper({
				wrapper_mod: '',
				container_mod: '',
				pagination_mod: '',
				arrow_prev_mod: 'custom-swiper-btn__prev',
				arrow_next_mod: 'custom-swiper-btn__next',
				pagination: true,
				navigation: true,
			}).swiper-product.js-swiper-product(class= args.ajax && 'swiper-product-ajax' ajax-src= args.ajax && '/local/templates/html/components-template/slider-product/ajax__slider-product.html')
