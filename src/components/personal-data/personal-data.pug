+include-style('personal-data')
+include-script('personal-data')

form(action="").personal-data.js-personal-data
    .row
        .col-md-7
            +input({
                label: 'Ваше ФИО',
                type: 'text',
                name: false,
                small: false,
                placeholder: 'Ваше ФИО',
                required: true,
                pattern: false,
                validation: {
                    message: 'Обязательное поле',
                    regexp: 'Неверный формат',
                    emailaddress: ' ',
                    identical: false
                }
            })(readonly)
        .col-md-5
            +datapicker({
                label: 'Дата рождения',
                required: true,
                placeholder: '__/__/____',
                readonly: true
            })
        .col-md-7
            +input({
                label: 'Ваш e-mail',
                type: 'email',
                name: false,
                small: false,
                placeholder: 'Ваш e-mail',
                required: true,
                pattern: email,
                validation: {
                    message: 'Обязательное поле',
                    regexp: 'Неверный формат',
                    emailaddress: ' ',
                    identical: false
                }
            })(readonly)
        .col-md-5
            +input({
                label: 'Ваш телефон',
                type: 'tel',
                name: false,
                small: false,
                placeholder: '+7(___)___-__-__',
                required: true,
                pattern: phone,
                validation: {
                    message: 'Обязательное поле',
                    regexp: 'Неверный формат',
                    emailaddress: ' ',
                    identical: false
                }
            })(readonly)
        .col-md-12
            .personal-data__actions
                a(href="javascript:;").btn.btn--primary.edit.js-edit
                    span Редактировать
                a(href="javascript:;").btn.btn--primary.save.js-save
                    span Сохранить профиль
