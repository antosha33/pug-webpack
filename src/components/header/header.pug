                                //выпадающий поиск готов, закоменчен для тестов на page speed
                                //-include ../search-result/search-result

                .header-top__item.header-top__item--middle
                    a.header-top__item-link.anim-ding(href="tel:+74996488477")
                        +icon("i-tel")
                        span.text.text--tel +7(499) 648-84-77
                +b.header-action.header-action--tel
                    +e('a').__title.js-btn-toggle(
                        href="#modal-contacts",
                        data-toggle='modal',
                        data-target="#modal-contacts"
                        data-overflow-click='true',
                        data-overflow-fade='true'
                        aria-label='Связаться с нами')
                        +icon('i-tel')
                +b.header-action.header-action--profile
                    //неавторизованный
                    +e('a').__title(
                        href="#modal-login",
                        data-toggle='modal',
                        data-target="#modal-login"
                        data-overflow-click='true',
                        data-overflow-fade='true'
                        aria-label='Войти в личный кабинет')
                        +icon('i-user')
                    //авторизованный
                    +e('a').__title(
                        style="display:none;"
                        href="javascript:;"
                        )
                        +icon('i-user')
                    +e.__body
