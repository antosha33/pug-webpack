                            li
                                a(href="#") Мой профиль
                            li
                                a(href="#") Заказы
                            li
                                a(href="#") Корзина
                            li
                                a(href="#") Избранное
                            li
                                a(href="#") Выход
                +b.header-action
                    +e('a').__title(href="#")
                        +icon('i-like')
                +b.header-action.header-action--cart
                    +e('a').__title(
                        href="#"
                        data-slam-ajax="true"
                        data-ajax-event="click mouseenter"
                        data-ajax-target=".header-basket-drop"
                        data-ajax-reinit=""
                        data-ajax-src="components-template/header-basket-drop/ajax__header-basket-drop.html"
                    )
                        +icon('i-cart')
                        span.count 3
                        span.price 20 450.40 р.
