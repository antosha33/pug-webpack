+b('header').header-middle
    .container
        +e.__inner
            a.mob-nav-btn.js-open-mob-nav(
                href="javascript:;"
                data-slam-ajax="true"
                data-ajax-event="click mouseenter"
                data-ajax-target=".header-mob-drop"
                data-ajax-reinit=""
                data-ajax-src="components-template/header-mob-drop/ajax__header-mob-drop.html"
            )
                span.burger
                    span
                    span
                    span
                    span
            a(href="./index.html").logo
                img(src="/local/templates/html/images/logo.svg" alt="Мавиком" width="214" height="49").logo__img
            +e.__actions
                +b.header-action.header-action--search
                    +e('a').__title.js-toggle-search
                        +icon('i-search').open
                        +icon('i-close').close
                    +e.__body.js-search-field-box
                        +e('a').__catalog-btn.btn.btn--primary(
                            href="javascript:;"
                            data-slam-ajax="true"
                            data-ajax-event="click mouseenter"
                            data-ajax-target=".header-catalog-drop"
                            data-ajax-reinit=""
                            data-ajax-src="components-template/header-catalog-drop/ajax__header-catalog-drop.html"
                        )
                            span.text Каталог
                            span.burger
                                span
                                span
                                span
                                span
                        +e('form').__search-wrap.header-search
                            input(type="text" placeholder="Введите название товара").header-search__input
                            .header-search__clear.anim-rotate.js-search-clear
                                +icon('i-close')
                            .header-search__close.js-search-close
                                +icon('i-close')
                            button.header-search__btn.anim-search
                                span
                                    +icon('i-search')
