+include-style('footer')

footer.footer
	.container
		.container-custom
			.footer__logo
				img.footer__logo(src='/local/templates/html/images/glo-logo.png')
			.footer-main
				.footer-main__col.footer-main__col--first
					.footer-main__title
						+presection-title-orange({
							title: 'Получение информации от БАТ'
						})
					.footer-nav
						form.bv-form.subscribe-form-footer
							+input({
								type: 'email',
								name: false,
								small: true,
								placeholder: 'Введите адрес электронной почты',
								required: true,
								pattern: true,
								validation: {
									message: 'Заполните поле',
									regexp: 'Неверный формат',
									emailaddress: '',
									identical: false
								}
							})
							+checkbox({
								require: true,
								fg_mod: 'subscribe-form-footer__checkbox',
								input_mod: '',
								sub: true
								})(data-bv-message=" ")
							button(data-submit="true").subscribe-form-footer__submit.btn.btn--primary.btn.btn--wide Отправить
				.footer-main__col
					.footer-main__title
						+presection-title-orange({
							title: 'Полезные ссылки'
						})
					.footer-nav.footer-nav--info
						+nav({
							modClass: 'nav--footer',
							list: [
								{name: 'Часто задаваемые вопросы'},
								{name: 'Доставка'},
								{name: 'Возврат и обмен'},
								{name: 'Контакты'},
							]
						})
				.footer-main__col
					.footer-main__title
						+presection-title-orange({
							title: 'Юридическая информация'
						})
					.footer-nav.footer-nav--info
						+nav({
							modClass: 'nav--footer',
							list: [
								{name: 'Политика в отношении обработки персональных данных'},
								{name: 'Согласие на обработку персональных данных'},
								{name: 'Политика Coockie'},
								{name: 'Пользовательское соглашение'}
							]
						})
