+include-style('modal')
+include-script('modal')
.modal.fade(
	id = 'modal-login', 
	class= 'modal-login' tabindex='-1', 
	aria-modal= 'true',
	aria-hidden='true',
	)
	.modal-dialog.modal-dialog-centered(class= '' role='document')
		.modal-content
			button.modal-close(type="button" data-dismiss="modal" aria-label="Close")
				+icon('i-close')(style='width: 26px; height: 26px;')
			.modal-body
				.modal-tabs
					.modal-tabs__item.active Войти
					.modal-tabs__item Регистрация
				.modal-tabs-page
					form.active.bv-form.js_lazy-load-validation(
						enctype='multipart/form-data',
						method='POST',
						action='#',
						autocomplete='on',
						novalidate='novalidate'
						)
						.modal-login__form
							+input({
								label: 'Электронная почта',
								type: 'email',
								name: false,
								small: false,
								placeholder: 'example@example.com',
								required: true,
								pattern: '[A-Za-zА-Яа-я0-9\_\-]{1,}@[A-Za-zА-Яа-я0-9\_\-]{1,}\.[A-Za-zА-Яа-я0-9]{2,}',
								validation: {
									message: 'Обязательное поле',
									regexp: 'Неверный формат',
									emailaddress: ' ',
									identical: false
								} 
							})
							+input({
								label: 'Пароль',
								type: 'password',
								name: false,
								small: false,
								placeholder: '',
								required: true,
