mixin modal(args = {})
	//-
		+modal({
			id: 'modal-NAME',
			mod: 'modal-NAME',
			title: 'TITLE',
			header: true,
			dialog_mod: ''
		})

	+include-style('modal')
	+include-script('modal')

	.modal.fade(
		id = args.id, 
		class= args.mod tabindex='-1', 
		aria-modal= 'true',
		aria-hidden='true',
		)
		.modal-dialog.modal-dialog-centered(class= args.dialog_mod role='document')
			.modal-content
				+lazy-bg({
					img: 'images/modal-bg.jpg',
					wrap_mod: 'modal-content__wrap',
					img_mod: 'modal-content__img',
				})
					if (args.header)
						button.modal-close(type="button" data-dismiss="modal" aria-label="Close")
							+icon('i-close')(style='width: 26px; height: 26px;')
					.modal-body
						block
