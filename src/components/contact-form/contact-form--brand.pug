+include-style('contact-form')
+validation()

form(action="#" id="js-brand-order").contact-form
    .contact-form__inner
        .row
            .col-md-8.offset-md-2
                .contact-form__header
                    +lazy-img({
                        img: 'images/contact-form.jpg',
                        placeholder: pixel,
                        img_mod: 'contact-form__img',
                        wrap_mod: 'contact-form__img-wrap',
                        link: false,
                        aria_label: false,
                    })
                    .h2.contact-form__title Связаться с нами
                .row
                    .col-md-6
                        +input({
                            label: 'Ваше имя',
                            type: 'text',
                            name: false,
                            small: false,
                            placeholder: 'Ваше имя',
                            required: true,
                            pattern: false,
                            validation: {
                                message: 'Обязательное поле',
                                regexp: 'Неверный формат',
                                emailaddress: ' ',
                                identical: false
                            }
                        })
                    .col-md-6
                        +input({
                            label: 'Ваш телефон',
                            type: 'tel',
                            name: false,
                            small: false,
                            placeholder: '+7(___)___-__-__',
                            required: true,
                            pattern: phone,
                            validation: {
                                message: 'Обязательное поле',
                                regexp: 'Неверный формат',
                                emailaddress: ' ',
                                identical: false
                            }
                        })
                    .col-md-6
                        +input({
                            label: 'Ваш e-mail',
                            type: 'email',
                            name: false,
                            small: false,
                            placeholder: 'Ваш e-mail',
                            required: true,
                            pattern: email,
                            validation: {
                                message: 'Обязательное поле',
                                regexp: 'Неверный формат',
                                emailaddress: ' ',
                                identical: false
                            }
                        })
                    .col-md-12
                        +textarea({
                            label: 'Сообщение',
                            placeholder: 'Текст сообщения',
                        })
                    .col-md-12
                        button.btn.btn--primary
                            span Отправить