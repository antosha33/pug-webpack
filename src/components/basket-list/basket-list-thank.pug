+include-style('basket-list')

.basket-list
    mixin bl-item(args={})
        .bl-item
            .bl-item__img-wrap
                img.bl-item__img(src=args.img alt="item")
            .bl-item__title=args.title
            .bl-item__info
                dl
                    dd Артикул:
                    dt 34234512
    +bl-item({
        img: './images/basket1.jpg',
        title: 'Диван офисный Изумрудное Облачко 2'
    })
    +bl-item({
        img: 'images/basket2.jpg',
        title: 'Диван офисный Омега 23-23'
    })
    +bl-item({
        img: 'images/basket3.jpg',
        title: 'Диван офисный Омега 23-23'
    })
