extends ../../layout/layout

block vars
	- var pageTitle = 'Карта товара - не диван'
	- var pageBodyClass = 'product-page'
	- var dir = './'


block premain
	.breadcrumb-wrap
		.container
			+breadcrumb({
				href_content1: '',
				content1: 'Каталог',
				href_content2: '',
				content2: 'Мебель для персонала',
				content3: 'Диван двухместный БЕВЕРЛИ ЭКОКОЖА'
			})
	include ../../components/pp-main/pp-main--v2
	include ../../components/pp-tabs/pp-tabs
	include ../../components/tabs-section/tabs-section--pp
	.mobile-buy-block.js-invise-scroll(data-invise-target=".pp-main__buy-box")
		.mobile-buy-block__inner
			p.price 5 200 000 ₽
			a(href="javascript:;").btn.btn--primary.js-scroll(data-target=".pp-main__buy-box")
				span Купить

block main
	.no-critical.no-critical--preloader



block componentsCriticalStyles
	+componentsCriticalStyles-includer()
block vendorScripts
	+vendorScripts-includer()
block componentsStyles
	+style-includer()

block componentsScripts
	+componentsScripts-includer()

block scripts
