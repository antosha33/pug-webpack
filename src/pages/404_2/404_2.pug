extends ../../layout/layout

block vars
    - var pageTitle = '404'
    - var pageBodyClass = 'not-found'
    - var dir = './'


block premain
    +not-found()
    .container.not-found__inner
        .row
            .col-lg-8.offset-lg-2
                 .not-found__title 404
                 p Не мучайте себя. Купите, например, <a href="index.html">кресло</a>
                 +lazy-img({
                    img: 'images/404_2.png',
                    placeholder: pixel,
                    img_mod: 'not-found__img',
                    wrap_mod: 'not-found__img-wrap',
                    link: false,
                    aria_label: false,
                 })


block main
    .no-critical.no-critical--preloader


block componentsCriticalStyles
    +componentsCriticalStyles-includer()
block vendorScripts
    +vendorScripts-includer()
block componentsStyles
    +style-includer()

block componentsScripts
    +componentsScripts-includer()

block scripts
