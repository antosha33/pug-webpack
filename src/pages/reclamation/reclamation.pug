extends ../../layout/layout

block componentsStyles
	+style-includer()

block vars
	- var bodyClass = 'no-transition '
	- var pageTitle = 'Рекламации'
	- var dir = './'


block premain
	+page-header-section({
		title: 'Рекламации',
		colClasses: 'col-12',
	})
		+breadcrumb({
			content1: 'Рекламации',
			href_content1: '',
			content2: '',
			href_content2: '',
			content3: '',
		})


block main
	.no-critical.no-critical--preloader
		include ../../components/reclamation/reclamation

block componentsCriticalStyles
	+componentsCriticalStyles-includer()
block vendorScripts
	+vendorScripts-includer()


block componentsScripts
	+componentsScripts-includer()

block scripts
	script(src="./js/vendor/masonry.min.js" defer)

